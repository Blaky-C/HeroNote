<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="是否使用标题："/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_compat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:typeface="normal"
            android:theme="@style/mySwitch"
            android:switchMinWidth="40dp"
            android:switchPadding="10dp"  />

    </RelativeLayout>

    <EditText
        android:id="@+id/et_new_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="@null"
        android:hint="请输入标题"
        android:textSize="18sp"
        android:textColor="@color/textPrimary"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">

        <TextView
            android:id="@+id/tv_new_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/textPrimary" />

        <TextView
            android:id="@+id/tv_new_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="默认分组"
            android:textSize="14sp"
            android:textColor="@color/textPrimary"/>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cover_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.heronote.view.StateButton
                android:id="@+id/cover_add_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="12dp"
                android:padding="16dp"
                android:text="插入封面"

                app:radius="8dp"
                app:round="true"
                app:animationDuration="200"

                app:normalStrokeWidth="2dp"
                app:pressedStrokeWidth="2dp"

                app:normalStrokeColor="@android:color/white"
                app:pressedStrokeColor="@android:color/white"

                app:normalTextColor="@android:color/white"
                app:pressedTextColor="@android:color/white"

                app:normalBackgroundColor="@color/colorPrimaryDark"
                app:pressedBackgroundColor="@color/colorPrimaryDark" />

            <ImageView
                android:id="@+id/cover_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:adjustViewBounds="true"
                android:visibility="gone" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/quote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="输入引言："
                    android:inputType="text"
                    android:textSize="12sp"
                    android:textColor="@color/textPrimary" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp" >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/quote_from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="引自："
                    android:inputType="text"
                    android:textSize="12sp"
                    android:textColor="@color/textPrimary" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <com.example.heronote.view.MyRichTextEditor
        android:id="@+id/et_new_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:textSize="16sp"
        android:textColor="@color/textPrimary"/>

</LinearLayout>